    /* Basic styling */
    body {
      font-family: Arial, sans-serif;
      line-height: 0.7;
      background-color: #f9f9f9;
    }

    header {
      background-color: burlywood;
      color: #fff;
      padding: 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    header a {
      text-decoration: none;
      color: white;
    }

    header h1 {
      margin: 0;
    }

    ul {
      list-style-type: none;
      display: flex;
      align-items: center;
    }

    ul li {
      display: inline;
      margin-right: 20px;
    }

    ul li a {
      color: #fff;
      text-decoration: none;
    }

    .container {
      padding-block: 10px;
    }

    marquee {
      text-align: center;
      font-size: 30px;
      background-color: aquamarine;
      margin: 0;
      padding: 0;
    }

    #sub-headings {
      padding-left: 40px;
      /* text-shadow: 2px 2px 5px rgb(84, 90, 92); */
      font-size: 30px;
      /* margin: 40px; */
      /* text-align: center; */
      font-family: "source sans pro", pro;
      /* color: white; */
      /* text-decoration: underline; */
    }

    .menu {
      padding: 0 20px;
      display: flex;
      flex-wrap: wrap;
      /* Allow items to wrap to the next line */
      justify-content: space-around;
    }

    .menu-item {
      width: 300px;
      margin-bottom: 20px;
      /* Add margin between menu items */
      border-radius: 10px;
      /* Add rounded corners */
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      /* Add shadow effect */
      background-color: #ffffff;
    }

    .menu-item h3 {
      margin: 10px;
      text-align: center;
    }

    .menu-item img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 10px 10px 0 0;
    }

    .menu-text {
      padding: 10px;
      display: flex;
      justify-content: center;
      flex-direction: column;
      align-items: center;
      padding-top: 0;
    }

    .menu-item p {
      margin-bottom: 10px;
    }

    .menu-item span {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
      text-align: right;
      padding-right: 10px;
    }

    .menu-item button {
      display: block;
      margin: 0 auto;
      background-color: #333;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      /* Add smooth transition effect */
    }

    .menu-item button:hover {
      background-color: #555;
      /* Change background color on hover */
    }

    .menu-item:hover {
      transform: translateY(-5px);
      /* Move item slightly upwards on hover */
    }

    #testimonials {
      background-color: #f9f9f9;
      padding: 50px 0;
      text-align: center;
    }

    .testimonial-slider {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .testimonial-card {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin: 0 20px;
      max-width: 500px;
    }

    .testimonial-img {
      display: flex;
      align-items: center;
    }

    .testimonial-img img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      padding-right: 5px;
    }

    .testimonial-content {
      margin-bottom: 20px;
    }

    .testimonial-content p {
      font-size: 18px;
    }

    .testimonial-author {
      font-style: italic;
      color: #666;
    }

    .testimonial-card:hover {
      transform: scale(1.05);
    }

    #about {
