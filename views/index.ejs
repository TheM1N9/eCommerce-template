      color: #fff;
      text-align: center;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Styles for the hero section */
    .hero {
      position: relative;
      width: 100%;
      height: 400px;
      /* Adjust height as needed */
      overflow: hidden;
      background-image: url('/public/assets/banner4.png');
      /* Set the background image URL */
      background-color: #f9f9f9;
      /* Set a fallback background color */
      background-size: cover;
      /* Ensure the background image covers the entire section */
      background-position: center;
      /* Center the background image */
    }


    /* Styles for the image slider */
    .swiper-slide {
      position: relative;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .swiper-slide img {
      width: 100%;
      height: auto;
    }

    /* Styles for the hero text */
    .hero-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: #fff;
    }

    .hero-text h2 {
      font-size: 32px;
      margin-bottom: 10px;
    }

    .hero-text p {
      font-size: 18px;
      margin-bottom: 20px;
    }

    /* Styles for the button */
    .btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #333;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #555;
    }

    /* Styles for Swiper pagination and navigation buttons */
    .swiper-pagination {
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
    }

    .swiper-button-prev,
    .swiper-button-next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 40px;
      height: 40px;
      /* background-color: rgba(0, 0, 0, 0.5); */
      background-color: transparent;
      border-radius: 50%;
      cursor: pointer;
      z-index: 10;
    }

    .swiper-button-prev {
      left: 10px;
    }

    .swiper-button-next {
      right: 10px;
    }

    /* Styles for Swiper navigation arrows */
    .swiper-button-prev::after,
    .swiper-button-next::after {
      content: "";
      display: inline-block;
      width: 10px;
      height: 10px;
      border-top: 4px solid #fff;
      border-left: 4px solid #fff;
      transform: rotate(-45deg);
      box-shadow: -2px -2px rgb(116, 105, 116);
    }

    .swiper-button-next::after {
      transform: rotate(135deg);
    }

    form {
