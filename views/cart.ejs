<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Reset some default styles */
        body,
        h1,
        h2,
        h3,
        p,
        ul,
        li {
            margin: 0;
            padding: 0;
        }

        /* Basic styling */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f9f9f9;
        }

        header {
            background-color:hsl(249, 100%, 50%);
            color: #fff;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header a{
            text-decoration: none;
            color: white;
        }

        header h1 {
            margin: 0;
        }

        nav ul {
            list-style-type: none;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
        }

        section#about {
            background-color: #f5f5f5;
            text-align: center;
            padding: 40px 20px;
        }

        h2,
        h3 {
            margin: 20px;
            color: #333;
        }

        .cart {
            padding: 0 0;
            display: flex;
            flex-wrap: wrap;
            /* Allow items to wrap to next line */
            justify-content: center;
        }

        .cart-item {
            text-align: center;
            margin: 20px;
            /* Add margin between menu items */
            /* padding: 20px; */
            border-radius: 10px;
            /* Add rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            /* Add shadow effect */
            transition: transform 0.3s ease;
            /* Add smooth transition effect */
            background-color: #ffffff;
        }

        .cart-item h3 {
            margin: 0;
        }

        .cart-item img {
            width: 315px;
            height: 200px;
            object-fit: cover;
        }

        .item-img {
            overflow: hidden;
            border-radius: 10px;
        }

        .item-details {
            margin: 0 20px 20px;
        }

        .cart-item p {
            color: #777;
        }

        .cart-item span {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .cart-item button {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            /* Add smooth transition effect */
        }

        .cart-item button:hover {
            background-color: #555;
            /* Change background color on hover */
        }

        .cart-item:hover {
            transform: translateY(-5px);
            /* Move item slightly upwards on hover */
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
            position: fixed;
            bottom: 0;
            width:100%;
        }
    </style>
</head>

<body>
    <header>
        <a href="/index"><h1>SK Stop</h1></a>
        <nav>
            <ul>
                <li><a href="/menu">Menu</a></li>
                <li><a href="/users/<%= user._id %>">My Account</a></li>
            </ul>
        </nav>
    </header>

    <h2 style="text-align: center;">Shopping Cart</h2>
<section>
    <section class="cart">
        <% if (user.cart.length === 0) { %>
            <p>Your cart is empty</p>
        <% } else { %>
            <% let totalBilling = 0; %>
            <% user.cart.forEach(item => { %>
                <% totalBilling += item.price; %>
                <div class="cart-item">
                    <div class="item-img">
                        <img src="<%= item.image %>" alt="<%= item.name %>">
                    </div>
                    <div class="item-details">
                        <h3><%= item.name %></h3>
                        <p><%= item.description %></p>
                        <span>$<%= item.price %></span>
                        <button onclick="removeFromCart('<%= item._id %>')">Remove from Cart</button>
                    </div>
                </div>
            <% }); %>
          </section>
            <p style="text-align: center;">Total Billing: $<%= totalBilling.toFixed(2) %></p>
        <% } %>
    </section>

    <footer>
        <p>&copy; 2024 SK Stop Store. All rights reserved.</p>
    </footer>

    <script>
      function removeFromCart(itemId) {
          // Make an AJAX request to the server to remove the item from the cart
          fetch(`/cart/remove/${itemId}`, {
              method: 'DELETE',
              headers: {
                  'Content-Type': 'application/json'
              }
          })
          .then(response => {
              if (response.ok) {
                  // If the item is successfully removed from the cart, reload the page to reflect the changes
                  location.reload();
              } else {
                  // Handle error scenarios appropriately
                  console.error('Failed to remove item from cart');
              }
          })
          .catch(error => {
              console.error('Error:', error);
          });
      }
  </script>
  
</body>

</html>
